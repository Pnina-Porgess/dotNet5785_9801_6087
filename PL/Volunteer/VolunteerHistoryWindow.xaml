<Window x:Class="PL.VolunteerHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Volunteer Call History" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter and Sort Options -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="סינון לפי סוג קריאה:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource VolunteerFieldCollection}}"
                      SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                      Width="150" Margin="0,0,20,0"/>
            <TextBlock Text="מיון לפי:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource CloseCallFieldCollection}}"
                      SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}"
                      Width="150"/>
        </StackPanel>

        <!-- Closed Calls List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding ClosedCalls}" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionMode="Single" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Type" Binding="{Binding CallType}" Width="Auto"/>
                <DataGridTextColumn Header="Address" Binding="{Binding FullAddress}" Width="Auto"/>
                <DataGridTextColumn Header="סוג זמן הסיום:" Binding="{Binding EndType}" Width="200"/>
                <DataGridTextColumn Header="Finish Time" Binding="{Binding ActualEndTime}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

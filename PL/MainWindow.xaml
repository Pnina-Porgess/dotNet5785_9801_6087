<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="350*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="350*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="165*"/>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="31*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="3" Margin="0,0,0,31" Grid.RowSpan="3" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="57*"/>
                </Grid.RowDefinitions>
            </Grid>
            <Grid Grid.Column="3" Margin="0,31,0,0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Label HorizontalAlignment="Left" Margin="42,10,0,0" VerticalAlignment="Top" Height="auto" Background="#FFBDBFBD" Content="{Binding CurrentTime}" FontWeight="Bold" FontSize="20"/>
                <Button Content="Add one minute" HorizontalAlignment="Left" Margin="30,0,0,4" Grid.Row="1" Click="btnAddOneMinute_Click"/>
                <Button Content="Add one hour" HorizontalAlignment="Left" Margin="30,0,0,0" Grid.Row="2" VerticalAlignment="Top" Click="btnAddOneHour_Click"/>
                <Button Content="Add one day" HorizontalAlignment="Left" Margin="30,0,0,0" Grid.Row="3" VerticalAlignment="Top"  Click="btnAddOneDay_Click"/>
                <Button Content="Add one mounth" HorizontalAlignment="Left" Margin="30,0,0,0" Grid.Row="4" VerticalAlignment="Top" Click="btnAddOneMonth_Click"/>
                <Button Content="Add one year " HorizontalAlignment="Left" Margin="30,0,0,0" Grid.Row="5" VerticalAlignment="Top" Click="btnAddOneYear_Click"/>


            </Grid>
            <Button Grid.Column="1" Content="Reast DB" HorizontalAlignment="Left" Margin="178,26,0,0" Grid.Row="3" VerticalAlignment="Top" Click="ResetDatabase_Click" />
            <Button Grid.Column="1" Content="Init DB" HorizontalAlignment="Left" Margin="82,26,0,0" Grid.Row="3" VerticalAlignment="Top" Click="InitializeDatabase_Click"/>
            <!--Button for opening the list view screen of volunteer.-->
            <Button Grid.Column="3" Content="Handle Volunteer" HorizontalAlignment="Left" Margin="178,28,0,0" Grid.Row="3" VerticalAlignment="Top" Click="OnHandlevolunteerButton_Click"/>
             <!--Button for opening the list view screen of call.-->
            <Button Grid.Column="2" Content="Handle Calls" HorizontalAlignment="Left" Margin="0,28,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="OnHandleCallsButton_Click"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="128,65,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding RiskRange}" VerticalAlignment="Top" Width="120"/>
            <Label Grid.Column="1" Content="Max RiskRange:" HorizontalAlignment="Left" Margin="37,60,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Content="Update" HorizontalAlignment="Left" Margin="259,65,0,0" Grid.Row="1" VerticalAlignment="Top" Click="UpdateButton_Click"/>
        </Grid>

    </Grid>
</Window>

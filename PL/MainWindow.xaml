<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ניהול ראשי"
        Height="700" Width="850"
        Background="White"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="MainWindow_Loaded" Closed="MainWindow_Closed">

    <Window.Resources>
        <Color x:Key="TextBlueColor">#0D3F59</Color>
        <Color x:Key="OrangeColor">#FDB53B</Color>
        <Color x:Key="PinkColor">#CF5BA4</Color>
        <Color x:Key="GreenColor">#B3D36B</Color>
        <Color x:Key="LightBlueColor">#32A7DD</Color>
        <SolidColorBrush x:Key="TextBlueBrush" Color="{StaticResource TextBlueColor}" />
        <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource OrangeColor}" />
        <SolidColorBrush x:Key="PinkBrush" Color="{StaticResource PinkColor}" />
        <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}" />
        <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}" />
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource OrangeBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBlueBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- כפתורים קטנים להוספת זמן -->
        <Style x:Key="SmallAddButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Background" Value="{StaticResource GreenBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="🏠" FontSize="32" Margin="0,0,10,0"/>
            <TextBlock Text="מסך ניהול ראשי"
                       Foreground="{StaticResource OrangeBrush}"
                       FontSize="28"
                       FontWeight="Bold"/>
        </StackPanel>

        <!-- תוכן ראשי -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="16" Padding="30" BorderBrush="{StaticResource LightBlueBrush}" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text=" השעה הנוכחית:" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBlueBrush}" Margin="0,0,0,8" TextAlignment="Center"/>
                <TextBlock Text="{Binding CurrentTime}" FontSize="38" FontWeight="Bold" Foreground="{StaticResource TextBlueBrush}" Margin="0,0,0,20" TextAlignment="Center" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Content="➕ דקה" Style="{StaticResource SmallAddButtonStyle}" Click="btnAddOneMinute_Click"/>
                    <Button Content="➕ שעה" Style="{StaticResource SmallAddButtonStyle}" Click="btnAddOneHour_Click"/>
                    <Button Content="➕ יום" Style="{StaticResource SmallAddButtonStyle}" Click="btnAddOneDay_Click"/>
                    <Button Content="➕ חודש" Style="{StaticResource SmallAddButtonStyle}" Click="btnAddOneMonth_Click"/>
                    <Button Content="➕ שנה" Style="{StaticResource SmallAddButtonStyle}" Click="btnAddOneYear_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="טווח סיכון:" FontSize="18" Foreground="{StaticResource TextBlueBrush}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding RiskRange}" Width="120" Margin="10,0,0,0" FontSize="16" VerticalAlignment="Center"/>
                    <Button Content="עדכן" Style="{StaticResource MainButtonStyle}" Background="{StaticResource LightBlueBrush}" Click="UpdateButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- כפתורי אתחול/איפוס מחוץ למסגרת -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="אתחל מסד נתונים" Style="{StaticResource MainButtonStyle}" Background="{StaticResource LightBlueBrush}" Click="InitializeDatabase_Click"/>
            <Button Content="אפס מסד נתונים" Style="{StaticResource MainButtonStyle}" Background="{StaticResource PinkBrush}" Click="ResetDatabase_Click"/>
        </StackPanel>

        <!-- ניווט -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="ניהול שיחות" Style="{StaticResource MainButtonStyle}" Background="{StaticResource GreenBrush}" Click="OnHandleCallsButton_Click"/>
            <Button Content="ניהול מתנדבים" Style="{StaticResource MainButtonStyle}" Background="{StaticResource OrangeBrush}" Click="OnHandleVolunteersButton_Click"/>
        </StackPanel>
    </Grid>
</Window>